<%= render 'shared/error_messages', object: f.object %>

<style>
  i{
    color: #911
  }
  .input-leo {
    padding: 10px 5px !important;
    width: 100%;
    border: 2px solid #000;
  }
  .input-leo:hover{
    border: 2px solid #901;
  }
</style>

<div class="form-group">
  <%= f.label :name %> <i>*</i>
  <%= f.text_field :name, class: 'input-leo' %>
</div>

<div class="form-group">
  <%= f.label :email %> <i>*</i>
  <%= f.email_field :email, class: 'input-leo' %>
</div>

<div class="form-group">
  <%= f.label :password %> <i>*</i>
  <%= f.password_field :password, class: 'input-leo' %>
</div>

<div class="form-group">
  <%= f.label :password_confirmation %> <i>*</i>
  <%= f.password_field :password_confirmation, class: 'input-leo' %>
</div>